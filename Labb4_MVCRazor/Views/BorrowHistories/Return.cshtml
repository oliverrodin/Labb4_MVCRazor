@model ActiveBorrows

@{
    ViewData["Title"] = "Return book.";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <left>
                            <h4>Confirm return: @Model.Book.Title</h4>
                        </left>
                    </div>
                </div>
                <div>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <img src="@Model.Book.ImageUrl" width="100%" style="text-align: center;" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Book.ImageUrl" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Book.ImageUrl)" readonly />
                            <label asp-for="Book.ImageUrl"></label>
                            <span asp-validation-for="Book.ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Customer.Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Customer.Name)" readonly/>
                            <label asp-for="Customer.Name"></label>
                            <span asp-validation-for="Customer.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Book.Title" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Book.Title)" readonly/>
                            <label asp-for="Book.Title"></label>
                            <span asp-validation-for="Book.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="IssueDate.Date" type="date" class="form-control" placeholder="@Html.DisplayNameFor(model => model.IssueDate)" readonly/>
                            <label asp-for="IssueDate"></label>
                            <span asp-validation-for="IssueDate" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ExpireDate.Value.Date" type="date" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ExpireDate)" readonly/>
                            <label asp-for="ExpireDate"></label>
                            <span asp-validation-for="ExpireDate" class="text-danger"></span>
                        </div>
                        <p class="card-text badge bg-danger"><b>Days left: </b>@((Model.ExpireDate?.Day - Model.IssueDate.Day))</p>
                        
                    </div>
                </div>
                <div class="row">
                    <div>
                        <hr/>
                    </div>
                    <div>
                        <form asp-action="Return">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="confirm" class="btn btn-danger opacity-50 float-end"/>
                        </form>
                        
                        <a asp-action="Index" class="btn btn-outline-danger opacity-50">Back to list</a>
                    </div
                </div>
            </div>
        </div>
    </div>
</div>

