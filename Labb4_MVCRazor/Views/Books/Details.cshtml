@model Book

@{
    ViewData["Title"] = "Details for book.";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <left>
                            <h4>Details about: @Model.Title</h4>
                        </left>
                    </div>
                </div>
                <div>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <img src="@Model.ImageUrl" width="100%" style="text-align: center;" />
                    </div>
                    <div class="col-md-6">
                        <p class="card-text"><b>Title: </b>@Model.Title</p>
                        <p class="card-text"><b>Description: </b>@Model.Description</p>
                        <p class="card-text"><b>Author: </b>@Model.Author</p>
                        <p class="card-text"><b>Published: </b>@Model.Published</p>
                        <p class="card-text"><b>Serial Number: </b>@Model.SerialNumber</p>
                        <p class="card-text"><b>Category: </b>@Model.BookCategory</p>
                    </div>
                </div>
                <div class="row">
                    <div>
                        <hr/>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger opacity-50 float-end">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-danger opacity-50">Back to list</a>
                    </div
                </div>
            </div>
        </div>
    </div>
</div>

